{{#each errors}}
<div class="alert alert-danger">
    {{text}}
</div>
{{else}}
{{/each}}

<div class="card card-body">
    <h3>Product Edit</h3>
    <form action="/product/{{product.id}}?_method=PUT" method="post">
        
        <div class="form-group">
            <label for="itemNo">Number</label>
            <input type="text" class="form-control" name="itemNo" value="{{product.itemNo}}" required>
        </div>
        <div class="form-group">
            <label for="prodName">Name</label>
            <input type="text" class="form-control" name="prodName" value="{{product.prodName}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>